<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComboBoxBorderSample.MainPage"
             xmlns:local="clr-namespace:ComboBoxBorderSample"
            xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs">

    <VerticalStackLayout Spacing="10" VerticalOptions="Center" WidthRequest="240">

        <Border
            Stroke="Red"
            StrokeShape="RoundRectangle 5">
            <editors:SfComboBox  
                    ShowBorder="False"
                    Placeholder="Select Here" >
                <editors:SfComboBox.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Uganda</x:String>
                        <x:String>Ukraine</x:String>
                        <x:String>United States</x:String>
                        <x:String>United Kingdom</x:String>
                        <x:String>Uzbekistan</x:String>
                    </x:Array>
                </editors:SfComboBox.ItemsSource>
            </editors:SfComboBox>
        </Border>

    </VerticalStackLayout>

</ContentPage>
